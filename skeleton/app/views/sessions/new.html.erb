<form action="<%= session_url %>" method="post">
<input type="hidden"
  name="authenticity_token"
  value="<%= form_authenticity_token %>">
  <label for="user_name">Name</label>
  <input
    type="text" 
    name="user[username]"
    id="user_name"
    value="">

  <label for="password">Password</label>
  <input
    type="text"
    name="user[password]"
    id="password"
    value="">
  <br>
  <input type="submit" value="Sign in">
</form>
